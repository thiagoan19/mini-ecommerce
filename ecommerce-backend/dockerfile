# Usa a imagem base do PHP-FPM
FROM php:8.2-fpm

# Instala dependências do sistema + Nginx
RUN apt-get update && apt-get install -y \
    build-essential \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    curl \
    git \
    libzip-dev \
    default-mysql-client \
    nginx \
    supervisor

# Instala extensões do PHP
RUN docker-php-ext-install pdo pdo_mysql mbstring exif pcntl bcmath gd zip

# Configura o Nginx
COPY docker/nginx.conf /etc/nginx/sites-available/default
RUN ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Configura o Supervisor (para gerenciar Nginx e PHP-FPM)
COPY docker/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Instala o Composer
COPY --from=composer:2.6 /usr/bin/composer /usr/bin/composer

# Diretório de trabalho
WORKDIR /var/www

# Copia o projeto Laravel
COPY . .

# Instala dependências do Laravel (sem dev-dependencies)
RUN composer install --optimize-autoloader --no-dev

# Permissões
RUN chown -R www-data:www-data /var/www \
    && chmod -R 755 /var/www/storage

# Gera chave da aplicação (se não existir)
RUN if [ ! -f .env ]; then cp .env.example .env && php artisan key:generate; fi

# Expõe a porta 8000 (Nginx)
EXPOSE 8000

# Inicia o Supervisor (que gerencia Nginx e PHP-FPM)
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
